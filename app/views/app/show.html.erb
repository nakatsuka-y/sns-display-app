<h1>App#show</h1>
<a href="/twitter_reload">Reload Timeline</a>
<div>
  <ol>
  <% @tweets.each do |tweet| %>
    <li>
	  <p>
	  <%= "#{tweet["user"]["name"]} - #{tweet["text"]}" %>
	  </p>
	  <p>
	    <% if tweet["favorited"] == false %>
	      <a href='/twitter_like?id=<%= "#{tweet["id_str"]}" %>'>
		<% elsif tweet["favorited"] == true %>
	      <a href='/twitter_unlike?id=<%= "#{tweet["id_str"]}" %>'>
		<% end %>
	        <%= "#{tweet["favorited"]}" %>
		  </a>
	  </p>
	  <% unless tweet["entities"]["media"] == nil %>
	  <p>
	      <img src="<%= "#{tweet["entities"]["media"][0]["media_url"]}" %>" />
	  </p>
	  <% end %>
    </li>
  <% end %>
  </ol>
</div>
